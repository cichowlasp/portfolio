---
import Me from '../assets/pictures/me.webp';

interface Props {
	title: string;
	description?: string;
	canonicalUrl?: string;
	lang?: string;
}

const {
	title,
	description = "Piotr Cichowlas' portfolio, showcasing skills in cybersecurity, front-end development, and video editing.",
	canonicalUrl = 'https://portfolio.cichowlasp.org',
	lang = 'en',
} = Astro.props;
---

<!doctype html>
<html class='bg-gray-200 overflow-x-hidden' lang={lang}>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<meta name='description' content={description} />
		<meta name='robots' content='index, follow' />
		<link rel='canonical' href={canonicalUrl} />
		<meta http-equiv='content-language' content={lang} />

		<!-- Open Graph / Facebook -->
		<meta property='og:url' content={canonicalUrl} />
		<meta property='og:type' content='website' />
		<meta property='og:title' content={title} />
		<meta property='og:description' content={description} />
		<meta
			property='og:image'
			content='https://portfolio.cichowlasp.org/me.png'
		/>
		<meta
			property='og:locale'
			content={lang === 'en' ? 'en_US' : lang + '_' + lang.toUpperCase()}
		/>

		<!-- Twitter -->
		<meta name='twitter:card' content='summary_large_image' />
		<meta name='twitter:title' content={title} />
		<meta name='twitter:description' content={description} />
		<meta
			name='twitter:image'
			content='https://portfolio.cichowlasp.org/me.png'
		/>

		<!-- Google verification -->
		<meta
			name='google-site-verification'
			content='M0TrKHT5HlKiB3sIvZbW2zxdFGFUUy3Yqehsyf-Fmhs'
		/>

		<!-- Performance optimizations -->
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />

		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>

		<!-- Structured data for better SEO -->
		<script type='application/ld+json'>
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Piotr Cichowlas",
				"url": "https://portfolio.cichowlasp.org",
				"image": "https://portfolio.cichowlasp.org/me.png",
				"sameAs": [
					"https://github.com/cichowlasp",
					"https://linkedin.com/in/piotr-cichowlas",
					"https://www.instagram.com/cichowlasp",
					"https://www.facebook.com/piotr.cichowlas.5"
				],
				"jobTitle": "Cybersecurity Engineer",
				"worksFor": {
					"@type": "Organization",
					"name": "Ryanair Labs"
				}
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
