---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
	title: string;
	body: string;
	icon?: ImageMetadata;
	alt?: string;
}

const { title, body, icon, alt } = Astro.props;
---

<div>
	{
		icon && alt && (
			<Image
				class='w-12 h-12 mb-4'
				height={50}
				width={50}
				src={icon}
				alt={alt}
			/>
		)
	}
	<h2 class='text-xl font-semibold mb-2'>
		{title}
	</h2>
	<p class='font-light'>
		{body}
	</p>
</div>
