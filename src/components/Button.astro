---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
	info?: string;
	simple?: boolean;
	dark?: boolean;
}
const { info, simple = false, dark = false } = Astro.props;
---

{
	simple ? (
		<button class=`bg-gray-100 py-4 px-8 rounded-full ${Astro.props.class}` {...Astro.props}>
			<slot />
		</button>
	) : (
		<div class=` bg-gray-200 rounded-full p-1 border-[1px] border-gray-300 border-opacity-50 flex flex-row items-center gap-4 font-bold ${Astro.props.class}`>
			{info ? <div class='pl-4 font-normal'>{info}</div> : null}
			<button class=` ${dark? 'bg-gray-900 text-gray-100' : 'bg-gray-100 text-gray-900'} py-4 px-8 rounded-full` {...Astro.props}>
				<slot />
			</button>
		</div>
	)
}
