<script define:vars={{ email }}>
	const delay = (ms) => new Promise((res) => setTimeout(res, ms));
	let copyButton = document.querySelector('#copy');
	copyButton?.addEventListener('click', async () => {
		await navigator.clipboard
			.writeText(email)
			.then(() => (copyButton.textContent = 'Copied!'))
			.catch((error) => console.error(error));
		await delay(2000);
		copyButton.textContent = 'Copy';
	});

	document.querySelectorAll('#link').forEach((anchor) => {
		anchor.addEventListener('click', function (event) {
			event.preventDefault();

			document.querySelector(this.getAttribute('href')).scrollIntoView({
				behavior: 'smooth',
			});
		});
	});

	const mobileMenu = document.querySelector('#mobile-menu');

	const hideMenu = () => {
		mobileMenu.classList.remove('flex');
		mobileMenu.classList.add('hidden');
	};

	const showMenu = () => {
		mobileMenu.classList.remove('hidden');
		mobileMenu.classList.add('flex');
	};

	const closeMenu = document.querySelector('#close-menu');
	const openMenu = document.querySelector('#open-menu');

	closeMenu?.addEventListener('click', () => hideMenu());
	openMenu?.addEventListener('click', () => showMenu());

	const mobileLinks = mobileMenu.children;
	[...mobileLinks].forEach((link) =>
		link.addEventListener('click', () => hideMenu())
	);

	const findPosition = (obj) => {
		var currenttop = 0;
		if (obj.offsetParent) {
			do {
				currenttop += obj.offsetTop;
			} while ((obj = obj.offsetParent));
			return [currenttop - 100];
		}
	};

	const learnButton = document.querySelector('#learn-more');
	learnButton.addEventListener('click', () =>
		scrollTo({
			top: findPosition(document.querySelector('#about-me')),
			behavior: 'smooth',
		})
	);

	const percent = document.querySelector('#percent');

	document.addEventListener('scroll', () => {
		let h = document.documentElement,
			b = document.body,
			st = 'scrollTop',
			sh = 'scrollHeight';

		let r = document.querySelector(':root');

		function calculateScrollPercent() {
			// Get scroll position and viewport height for mobile accuracy
			let scrollTop = h[st] || b[st];
			let scrollHeight = h[sh] || b[sh];
			let viewportHeight = window.innerHeight;

			// Calculate the percentage scrolled
			return Math.round(
				Math.max(
					0,
					Math.min(
						(scrollTop / (scrollHeight - viewportHeight)) * 100,
						100
					)
				)
			);
		}
		r.style.setProperty('--count', calculateScrollPercent() + '%');
		percent.innerHTML = calculateScrollPercent() + '%';

		// Call the updateCurrentSection function to update the section indicator
		updateCurrentSection();
	});

	// Progress pill transformation functionality
	const progressPill = document.querySelector('#progress-pill');
	const navLinks = document.querySelector('#nav-links');
	const sectionIndicator = document.querySelector('#section-indicator');
	const arrowIcon = document.querySelector('#arrow-icon');
	let isExpanded = false;

	// Initialize styles to ensure consistent behavior on first click
	window.addEventListener('DOMContentLoaded', () => {
		progressPill.style.borderRadius = '16px';
	});

	// Toggle transformation of the pill
	progressPill?.addEventListener('click', () => {
		if (!isExpanded) {
			// Rotate arrow icon
			arrowIcon.style.transform = 'rotate(180deg)';

			// Expand with a smooth animation
			progressPill.style.width = '200px';
			progressPill.style.height = '190px';
			progressPill.style.borderRadius = '16px';
			progressPill.style.paddingTop = '12px'; // Add padding to the top when expanded
			progressPill.style.paddingRight = '15px';
			progressPill.style.paddingLeft = '15px';
			// Show navigation links with a slight delay for a sequential animation
			setTimeout(() => {
				navLinks.classList.remove('hidden');
				navLinks.classList.add('flex');

				// Fade in the links with a slight delay
				setTimeout(() => {
					navLinks.style.opacity = '1';
					navLinks.style.transform = 'translateY(0)';
				}, 50);
			}, 200);

			isExpanded = true;
		} else {
			// Reset arrow icon
			arrowIcon.style.transform = 'rotate(0deg)';

			// Fade out links first
			navLinks.style.opacity = '0';
			navLinks.style.transform = 'translateY(10px)';

			// Then collapse the pill with a slight delay
			setTimeout(() => {
				progressPill.style.width = '128px';
				progressPill.style.height = '24px';
				progressPill.style.paddingTop = '0.25rem'; // Reset padding when collapsed
				progressPill.style.paddingRight = '0.25rem';
				progressPill.style.paddingLeft = '0.25rem';
				// Hide the links after animation completes
				setTimeout(() => {
					navLinks.classList.add('hidden');
					navLinks.classList.remove('flex');
				}, 300);

				isExpanded = false;
			}, 100);
		}
	});

	// Close expanded pill when clicking elsewhere
	document.addEventListener('click', (event) => {
		if (!progressPill.contains(event.target) && isExpanded) {
			// Reset arrow icon
			arrowIcon.style.transform = 'rotate(0deg)';

			// Fade out links first
			navLinks.style.opacity = '0';
			navLinks.style.transform = 'translateY(10px)';

			// Then collapse the pill with a slight delay
			setTimeout(() => {
				progressPill.style.transition =
					'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
				progressPill.style.width = '128px';
				progressPill.style.height = '24px';
				progressPill.style.paddingTop = '0.25rem'; // Reset padding when collapsed
				progressPill.style.paddingRight = '0.25rem';
				progressPill.style.paddingLeft = '0.25rem';
				// Hide the links after animation completes
				setTimeout(() => {
					navLinks.classList.add('hidden');
					navLinks.classList.remove('flex');
				}, 300);

				isExpanded = false;
			}, 100);
		}
	});

	// Add smooth scrolling to navigation links
	navLinks.querySelectorAll('a').forEach((anchor) => {
		anchor.addEventListener('click', function (event) {
			event.preventDefault();

			// Reset arrow icon
			arrowIcon.style.transform = 'rotate(0deg)';

			// Collapse the pill
			navLinks.style.opacity = '0';
			navLinks.style.transform = 'translateY(10px)';

			setTimeout(() => {
				progressPill.style.width = '128px';
				progressPill.style.height = '24px';

				setTimeout(() => {
					navLinks.classList.add('hidden');
					navLinks.classList.remove('flex');
				}, 300);

				isExpanded = false;
			}, 100);

			document.querySelector(this.getAttribute('href')).scrollIntoView({
				behavior: 'smooth',
			});
		});
	});

	// Initialize transform property for smooth animations
	navLinks.style.transform = 'translateY(10px)';
	navLinks.style.transition = 'opacity 0.3s ease, transform 0.3s ease';

	// Track current section
	const sections = ['start', 'about-me', 'projects', 'contact'];
	const sectionElements = sections.map((id) => document.getElementById(id));

	function updateCurrentSection() {
		const scrollPosition = window.scrollY + window.innerHeight / 3;

		// Find the current section
		let currentSection = 'Top';
		for (let i = sectionElements.length - 1; i >= 0; i--) {
			const section = sectionElements[i];
			if (section && scrollPosition >= section.offsetTop) {
				currentSection = section.id;
				break;
			}
		}

		// Update the section indicator text
		switch (currentSection) {
			case 'start':
				sectionIndicator.textContent = 'Top';
				break;
			case 'about-me':
				sectionIndicator.textContent = 'About Me';
				break;
			case 'projects':
				sectionIndicator.textContent = 'Projects';
				break;
			case 'contact':
				sectionIndicator.textContent = 'Contact';
				break;
			default:
				sectionIndicator.textContent = 'Index';
		}
	}
</script>
